<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.musicaaplikazioa">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicaAplikazioa">

        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">

            <!-- Spotify authentication callback -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="${redirectSchemeName}"
                    android:host="${redirectHostName}"
                    android:pathPattern="${redirectPathPattern}" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ErregistroActivity"
            android:exported="true" />
        <activity
            android:name=".pantailak.HomePantaila"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".pantailak.ProfilaPantaila"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".AddActivity"
            android:exported="true" />

    </application>
</manifest>
